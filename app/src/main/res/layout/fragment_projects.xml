<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:id="@+id/page_header"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/projects_header"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp"
            android:textStyle="bold"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/projects_page_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/projects_page_intro"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/page_header" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/project_pcrs_jslinux"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_rectangle"

            android:onClick="toggleProjectView"
            app:layout_constraintBottom_toTopOf="@id/project_dots_lines"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/projects_page_desc">

            <TextView
                android:id="@+id/pcrs_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pcrs_jslinux_label"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:textStyle="bold"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/pcrs_link"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:onClick="visitTaggedSite"
                android:tag="@string/pcrs_jslinux_link"
                android:text="@string/pcrs_jslinux_link"
                android:textColor="@color/link_color"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/pcrs_description"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/uoft_description"
                android:textColor="@color/black"
                android:textSize="15sp"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/project_dots_lines"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_rectangle"

            android:onClick="toggleProjectView"
            app:layout_constraintBottom_toTopOf="@id/project_memories"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/project_pcrs_jslinux">

            <TextView
                android:id="@+id/dotsnlines_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dotsnlines_label"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:textStyle="bold"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/dotsnlines_link"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:onClick="visitTaggedSite"
                android:tag="@string/dotsnlines_link"
                android:text="@string/dotsnlines_link"
                android:textColor="@color/link_color"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/dotsnline_description"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/dotsnlines_description"
                android:textColor="@color/black"
                android:textSize="15sp"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/project_memories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_rectangle"

            android:onClick="toggleProjectView"
            app:layout_constraintBottom_toTopOf="@id/therapy_inov_before_after"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/project_dots_lines">

            <TextView
                android:id="@+id/memories_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/memories_label"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:textStyle="bold"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/memories_link"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:onClick="visitTaggedSite"
                android:tag="@string/memories_link"
                android:text="@string/memories_link"
                android:textColor="@color/link_color"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/memories_description"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/memories_description"
                android:textColor="@color/black"
                android:textSize="15sp"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/therapy_inov_before_after"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_rectangle"

            android:onClick="toggleProjectView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/project_memories">

            <TextView
                android:id="@+id/therapy_inov_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/therapy_inov_before_after_label"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:textStyle="bold"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/website_link_anchor"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:text="See "

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/website_link_before"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="visitTaggedSite"
                android:tag="@string/therapy_inov_before_link"
                android:text="before "
                android:textColor="@color/link_color"

                app:layout_constraintLeft_toRightOf="@id/website_link_anchor"
                app:layout_constraintTop_toTopOf="@id/website_link_anchor" />

            <TextView
                android:id="@+id/website_link_anchor2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="and "

                app:layout_constraintLeft_toRightOf="@id/website_link_before"
                app:layout_constraintTop_toTopOf="@id/website_link_anchor" />

            <TextView
                android:id="@+id/website_link_after"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="visitTaggedSite"
                android:tag="@string/therapy_inov_after_link"
                android:text="after."
                android:textColor="@color/link_color"

                app:layout_constraintLeft_toRightOf="@id/website_link_anchor2"
                app:layout_constraintTop_toTopOf="@id/website_link_anchor" />

            <TextView
                android:id="@+id/website_description"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/therapy_inov_description_short"
                android:textColor="@color/black"
                android:textSize="15sp"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

</ScrollView>